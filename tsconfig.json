{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "outDir": "./dist",
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": [
    ".eslintrc.js",
    "globals.d.ts",
    "spec/**/*.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.yaml",
    "src/**/*.yml",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
